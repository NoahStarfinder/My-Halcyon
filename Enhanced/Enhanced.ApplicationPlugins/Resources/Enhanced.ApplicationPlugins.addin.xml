<Addin id="Enhanced.ApplicationPlugins" version="0.1">
  <Runtime>
    <Import assembly="Enhanced.ApplicationPlugins.dll"/>
  </Runtime>
  <Dependencies>
    <Addin id="OpenSim" version="0.5" />
  </Dependencies>
  <Extension path = "/OpenSim/Startup">
    <Plugin id="EnhancedChatLogMessageFileBackend" type="Enhanced.ApplicationPlugins.ChatLog.EnhancedChatLogMessageFileBackend" />
    <Plugin id="EnhancedChatLogMessageCassandra12Backend" type="Enhanced.ApplicationPlugins.ChatLog.EnhancedChatLogMessageCassandra12Backend" />
  </Extension>
  <Extension path = "/OpenSim/RegionModules">
    <RegionModule id="EnhancedChatLogModule" type="Enhanced.ApplicationPlugins.ChatLog.EnhancedChatLogModule" />
    <RegionModule id="AvatarRemoteCommandModule" type="Enhanced.ApplicationPlugins.AvatarRemoteCommandModule.AvatarRemoteCommandModule" />
    <RegionModule id="GuestModule" type="Enhanced.ApplicationPlugins.GuestModule.GuestModule" />
    <RegionModule id="ChatFilterModule" type="Enhanced.ApplicationPlugins.ChatFilterModule.ChatFilterModule" />
  </Extension>
</Addin>
